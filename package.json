{
  "name": "axette",
  "version": "1.0.0",
  "description": "Very simple and lightweight AJAX implementation for Nette",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "eslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion" : "git push && git push --tags"
  },
  "files": [
    "lib/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/matronator/axette.git"
  },
  "keywords": ["nette", "ajax"],
  "author": "Matronator",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/matronator/axette/issues"
  },
  "homepage": "https://github.com/matronator/axette#readme",
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "jest": "^27.0.4",
    "prettier": "^2.3.1",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.3"
  }
}
